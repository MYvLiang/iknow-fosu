.top-view {
  display: flex;
  width: 100%;
  height: 100rpx;
  z-index: 100;
  position: fixed;
  top: 0px;
  background-color: #fff;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
  border-bottom-color: #dfe4ea;
}

.top-set {
  margin: auto;
  flex: 2;
}

.set-image {
  height: 36rpx;
  width: 48rpx;
  margin-top: 10rpx;
  margin-left: 16rpx;
}

.top-week {
  margin: auto;
  flex: 3;
  font-size: 34rpx;
  text-align: center;
}

.course {
  margin-top: 106rpx;
  display: flex;
  width: 100%;
  height: 1680rpx;
  /* background-color: #fff; */
}

.course-time-container {
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f1f2f6;
}

.course-time-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* border-bottom-style: dotted;
  border-bottom-width: 1rpx;
  border-bottom-color: #9fa0a1; */
}

.time-num {
  font-size: 28rpx;
  text-align: center;
}

.time {
  font-size: 22rpx;
  text-align: center;
}

.course-body {
  flex: 21;
  background-color: #fff;
  display: flex;
}

.course-day {
  flex: 1;
  width: 0;
  position: relative;
  margin-left: 4rpx;
  margin-right: 3rpx;
  display: flex;
  flex-direction: column;
}

.course-grid {
  flex: 1;
  border-bottom-style: dotted;
  border-bottom-width: 1rpx;
  border-bottom-color: #d6dde6;
}

.course-day-item {
  position: absolute;
  margin-top: 5rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.more-course{
  /* border-top-right-radius: 35rpx; */
  box-shadow: 0rpx 2rpx 10rpx 2rpx #999;
}
.course-text {
  text-overflow: ellipsis;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-align: center;
  color: #fff;
  padding: 5rpx 5rpx;
  font-size: 24rpx;
}

.course-name {
  -webkit-line-clamp: 3;
}

.classroom {
  -webkit-line-clamp: 2;
}

.week-num {
  -webkit-line-clamp: 1;
}

.dialog {
  position: fixed;
  z-index: 3000;
  background-color: #000;
  opacity: 0.3;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.course-details {
  position: fixed;
  top: 400rpx;
  left: 170rpx;
  z-index: 4000;
  box-shadow: 10rpx 0rpx 20rpx 2rpx #777;
  border-radius: 16rpx;
  height: 500rpx;
  width: 400rpx;
}

.course-details-text{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
}

.course-details-name {
  font-size: 44rpx;
  text-align: center;
  margin: 20rpx;
  word-break: break-all;
}

.course-details-other {
  font-size: 32rpx;
  margin: 5rpx 50rpx;
  word-break: break-all;
}

.setting-dialog{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 4000;
  border-top-right-radius: 35rpx;
  border-top-left-radius: 35rpx;
  min-height: 100rpx;
  background-color: #fff;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
}


.picker{
  font-size: 40rpx;
  display: flex;
}


.keep-week{
  font-size: 30rpx;
  margin: 20rpx 0 40rpx 0;
}


.list{
  background-color: #fff;
  margin: 20rpx;
}
.list-letf{
  font-size: 32rpx;
}

.list-content{
  height: 106rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 36rpx;
  border-bottom: 0.1px solid #ddd;
  background-color: #fff;
}
.list-right{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-right-text{
  font-size: 32rpx;
  color: #999;
}
.arrow {
  width: 15rpx;
  height: 15rpx;
  border-top: 4rpx solid #bdbdbd;
  border-right: 4rpx solid #bdbdbd;
  transform: rotate(45deg);
  /* position: absolute; */
  /* right: 20rpx; */
  margin: 5rpx 40rpx 0rpx 10rpx;
}